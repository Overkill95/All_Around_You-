<head>
  <style>
    #divrisposte{
    font-family: 'Merriweather', serif;
	    width: 500px;
	    margin: left;
	    border: 3px solid green;
	    color:black;
	    position: relative;
	    overflow: auto;
	    text-align: left;
	    padding: 10px 10px;
	    border-radius: 10px 10px 10px 10px;
    }
    .usertag {
 background:url('https://dh3vbjnk0bnfa.cloudfront.net/static/centralauth/images/btn-login-hover.png') no-repeat 5px 5px #484B4F;
  width: 100px;
  align: right
  padding:10px 20px 10px 0;
  border-radius: 20%;
  border: 2px solid white;
  color:White;
  font-size:14px;
  text-align:center;
  font-weight: bold;
  -webkit-transition-duration: 0.4s;
  cursor: pointer;
}
#mipiacecount {
    color: green;
    font-size: 30px;
    user-select: none;
}
#nonmipiacecount {
    color: red;
    font-size: 30px;
    user-select: none;
}
i[id^="mipiacebtn"] {
    color: green;
    font-size: 25px;
    user-select: none;
}
#mipiacepressed {
    color: #003311;
    font-size: 25px;
    user-select: none;
}
#nonmipiacepressed {
    color:#660000;
}
i[id^="mipiacebtn"]:hover{
    color:#003311;
    font-size: 25px;
    user-select: none;
}
i[id^="nonmipiacebtn"]{
    color: red;
    font-size: 25px;
    user-select: none;
}
i[id^="nonmipiacebtn"]:hover{
    color:#660000;
}
.usertag:hover {
    background-color: black;
}
.my-btn {
    background-color:transparent;
    border: none;
    color: #ff4d4d;
    padding: 7px 13px;
    font-size: 30px;
    font-weight: bold;
    cursor: pointer;
}
.my-btn:hover {
    color: #990000;
}
  </style>
</head>


<body>


<div id='divrisposte'>
  <b> <%= risposte.user.name %>: </b> <span>  </span> <%= button_to "profilo", risposte.user, class: 'usertag', method: :get %>
  <br>
  <%= risposte.content %>
  <br>
  <i class="fa fa-thumbs-up" id="mipiacecount"></i>  <b><font size="10"><%= risposte.voti_rs.where("voto=?", true).count %></font></b>
<br>
  <i class="fa fa-thumbs-down" id="nonmipiacecount"></i>  <b><font size="10"><%= risposte.voti_rs.where("voto=?", false).count %></font> </b>
  </div>
  <% if currentuser.admin? || currentuser==risposte.user %>
      <%= button_to "X", cancellarisposte_path(risposte.id), class: 'my-btn', method: :get %>
    <% end %>
  <%= link_to vote_answer_path(risposte.user.id,risposte.id, 1) do %>
  <i class="fa fa-thumbs-up" id="mipiacebtn<%= risposte.id.to_s %>"> </i>
  <% end %>
  <%= link_to vote_question_path(risposte.user.id,risposte.id, 0) do %>
  <i class="fa fa-thumbs-down" id="nonmipiacebtn<%= risposte.id.to_s %>"></i>
  <% end %>
   <%= javascript_tag do %>
    var btnlike=document.getElementById("mipiacebtn<%= risposte.id.to_s %>" );
    var btndislike=document.getElementById("nonmipiacebtn<%= risposte.id.to_s %>" );

    <% if !risposte.voti_rs.find_by(:user_id => currentuser.id).nil? %>
       <% if !risposte.voti_rs.find_by(:user_id => currentuser.id).voto %>
             btndislike.style.color="black";
      <% else %>
             btnlike.style.color="black";
     <% end %>
    <% end %>
  <% end %>
</body>
