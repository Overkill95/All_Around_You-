<% provide(:title, "Home") %>
<!DOCTYPE html>
<html>
   <% if logged_in? %>
  <div class="row">
    <aside class="col-md-4">
      <section class="user_info">
        <%= render 'shared/user_info' %>
      </section>
      <section class="servizi_form">
        <%= render 'shared/servizi_form' %>
      </section>
    </aside>
    <div class="col-md-8">
      <h3>Servizi erogati:</h3>
      <%= render 'shared/feed' %>
    </div>
  </div>
  <% else %>
    <head>
        <title><%= yield(:title) %> | All Around You App</title>
    </head>
    <body>
        <h1>All around you</h1>
        <p>
    All around you
    <p> <%= link_to "Registrati!", signup_path %></p>
    <p><%= link_to "Loggati!", login_path %></p>
    </p>
    </body>
   <% end %>
</html>
