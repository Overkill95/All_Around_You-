<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
<style>
.my-btn {
    background-color:transparent;
    border: none;
    color: #ff4d4d;
    padding: 7px 13px;
    font-size: 30px;
    font-weight: bold;
    cursor: pointer;
}
.my-btn2 {
    background-color: #145214;
    color: black;
    padding: 5px 15px;
    text-align: center;
    text-decoration: none;
    display: inline;
    font-size: 16px;
    font-weight: bold;
    -webkit-transition-duration: 0.4s;
    transition-duration: 0.4s;
    border: 4px solid green;
    cursor: pointer;
}
.my-btn2:hover {
    background-color: #0f3e0f;
    color: black;
}
/* Darker background on mouse-over */
.my-btn:hover {
    color: #990000;
}
.button_to,
.button_to div {
  display: inline;
}

@import "compass/css3";

.ico-mglass {
  position:relative;
  display:inline-block;
  background:white;
  border-radius: 30px;
  height: 15px;
  width: 15px;
  border: 4px solid green;
}

.ico-mglass:after {
    content: "";
    height: 5px;
    width: 23px;
    background: green;
    position:absolute;
    top:17px;
    left:11px;
    -webkit-transform: rotate(45deg);
     -moz-transform: rotate(45deg);
      -ms-transform: rotate(45deg);
       -o-transform: rotate(45deg);
  }
